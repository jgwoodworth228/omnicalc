<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">New Loan Payment Calculation</h3>
  </div>
  <div class="panel-body">

    <form action="/loan_payment/results" class="form-horizontal">

      <div class="form-group">
        <label for="annual_percentage_rate" class="col-sm-2 control-label">APR</label>
          <div class="col-sm-10">
            <input name="annual_percentage_rate" class="form-control" type="number" step="any"  id="annual_percentage_rate" placeholder="Enter the APR of the loan (as a percent)">
          </div>
      </div>

      <div class="form-group">
        <label for="number_of_years" class="col-sm-2 control-label">Years</label>
          <div class="col-sm-10">
            <input name="number_of_years" class="form-control" type="number" min="1" id="number_of_years" placeholder="Enter the number of years">
          </div>
        </div>

      <div class="form-group">
        <label for="principal_value" class="col-sm-2 control-label">Principal</label>
          <div class="col-sm-10">
            <input name="principal_value" class="form-control" type="number" min="1" id="principal_value" placeholder="Enter the number of years">
          </div>
        </div>

        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </div>

    </form>
  </div>
</div>


